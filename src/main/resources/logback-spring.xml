<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <property name="LOG_PATH" value="./.logs"/>
  <property name="DEV_PATTERN"
    value="%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{15}) [%X{requestId:-} | %X{requestMethod:-} | %X{requestUri:-}] - %msg%n"/>
  <property name="PROD_PATTERN"
    value="%d{yy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%X{requestId:-} | %X{requestMethod:-} | %X{requestUri:-}] - %msg%n"/>

  <appender name="CONSOLE_DEV" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${DEV_PATTERN}</pattern>
    </encoder>
  </appender>

  <appender name="CONSOLE_PROD" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${PROD_PATTERN}</pattern>
    </encoder>
  </appender>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_PATH}/application.log</file>
    <encoder>
      <pattern>${PROD_PATTERN}</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_PATH}/application-%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
  </appender>

  <root level="INFO">
    <appender-ref ref="CONSOLE_PROD"/>
    <appender-ref ref="FILE"/>
  </root>

  <springProfile name="dev">
    <root level="INFO">
      <appender-ref ref="CONSOLE_DEV"/>
      <appender-ref ref="FILE"/>
    </root>
  </springProfile>
</configuration>
